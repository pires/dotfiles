[user]
	name = Pires
	email = pjpires@gmail.com
[color]
	ui = auto
[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore_global
	whitespace = space-before-tab,tab-in-indent,trailing-space
	editor = nvim
	pager = bat
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[diff]
	compactionHeuristic = true
[diff "color"]
	old = red strike
	new = green italic
[credential]
	helper = osxkeychain
[url "git@github.com:"]
	insteadOf = https://github.com/
[fetch]
	prune = true
[pull]
	prune = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[gpg "x509"]
	program = gitsign
[gitsign]
	connectorID = https://github.com/login/oauth
